<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".Activities.LoggedInMainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:text="OPTIONS"
                    android:textColor="#524D4D"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp"
                       android:src="@drawable/books_piled"
                       android:layout_height="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="Your Books"
                    android:textColor="#6264c8"
                    android:layout_gravity="center"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp"
                       android:src="@drawable/scan_history"
                       android:layout_height="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="Scan History"
                    android:layout_gravity="center"
                    android:textColor="#6264c8"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp"
                       android:src="@drawable/share"
                       android:layout_height="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="Share App"
                    android:layout_gravity="center"
                    android:textColor="#6264c8"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:text="ACTIONS"
                    android:textColor="#524D4D"
                    android:fontFamily="@font/raleway_light"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:id="@+id/logout"
                android:layout_height="wrap_content">
            <ImageView android:layout_width="30dp"
                       android:src="@drawable/logout"
                       android:layout_height="30dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="Logout"
                    android:layout_gravity="center"
                    android:fontFamily="@font/raleway_bold"
                    android:layout_marginLeft="15dp"
                    android:textColor="#6264c8"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
